{
  "name": "@pkg-tools/lint",
  "version": "0.0.0",
  "description": "A utility/tool for linting packages",
  "homepage": "https://github.com/dopt/pkg-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/dopt/pkg-tools.git",
    "directory": "packages/@pkg-tools/linting"
  },
  "license": "MIT",
  "private": false,
  "type": "module",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./cli.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "üëárequired package scripts": "",
    "build": "unbuild",
    "clean": "shx rm -rf ./dist",
    "dev": "unbuild --stub",
    "format": "prettier --w .",
    "formatcheck": "prettier -c .",
    "lint": "eslint .",
    "test": "echo \"@pkg-tools/lint does not require test\"; exit 0;",
    "typecheck": "tsc --noEmit",
    "‚òùÔ∏è required package scripts": "",
    "prepublishOnly": "pnpm -w exec turbo run build --filter=\"@pkg-tools/lint\""
  },
  "files": [
    "cli.js",
    "dist"
  ],
  "dependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "citty": "0.1.5",
    "consola": "3.2.3",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "globby": "14.0.0"
  },
  "devDependencies": {
    "@dopt/config": "1.1.0",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "prettier": "3.1.1",
    "shx": "0.3.4",
    "typescript": "5.3.3",
    "unbuild": "2.0.0"
  }
}
