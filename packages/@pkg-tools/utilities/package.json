{
  "name": "@pkg-tools/utilities",
  "version": "0.2.0",
  "private": false,
  "description": "A set of utilities used by @pkg-tools/*",
  "homepage": "https://github.com/pkg-tools/pkg-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/pkg-tools/pkg-tools.git",
    "directory": "packages/@pkg-tools/utilities"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "üëárequired package scripts": "",
    "build": "unbuild",
    "clean": "shx rm -rf ./dist",
    "dev": "unbuild --stub",
    "format": "prettier -w .",
    "formatcheck": "prettier -c .",
    "lint": "eslint .",
    "sort": "sort-package-json",
    "test": "echo \"@pkg-tools/clean does not require test\"; exit 0;",
    "typecheck": "tsc --noEmit",
    "‚òùÔ∏è required package scripts": "",
    "prepublishOnly": "pnpm -w exec turbo run build --filter=\"@pkg-tools/utilities\""
  },
  "dependencies": {
    "jiti": "1.21.0"
  },
  "devDependencies": {
    "@dopt/config": "1.1.0",
    "@types/shelljs": "0.8.15",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "prettier": "3.1.1",
    "publint": "^0.2.7",
    "shx": "0.3.4",
    "sort-package-json": "^2.6.0",
    "typescript": "5.3.3",
    "unbuild": "2.0.0"
  }
}
